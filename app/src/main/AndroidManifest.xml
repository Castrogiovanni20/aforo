<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pf.aforo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconapp_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconapp_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".ui.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

            <service android:name=".data.model.MyFirebaseMessaging"
                android:exported="false">
                <intent-filter>
                    <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" /> <!-- Propone este -->
                    <action android:name="com.google.firebase.MESSAGING_EVENT" /> <!-- El tutorial sugiere este-->
                </intent-filter>
            </service>

    </application>

</manifest>